{
    "name": "hiraeth/events",
    "description": "Event handling provided by League Event for the Hiraeth Nano Framework",
    "minimum-stability": "dev",
    "license": "MIT",
    "authors": [
        {
            "name":  "Matthew J. Sahagian",
            "email": "matthew.sahagian@gmail.com",
            "role":  "Lead Architect / Developer"
        }
    ],
    "require": {
        "hiraeth/app": "^3.0",
        "league/event": "^3.0",
        "hiraeth/signal": "^3.0"
    },
    "require-dev": {
        "phpstan/phpstan": "^1.0",
    	"phpunit/phpunit": "^10.0"
    },
    "autoload": {
        "classmap": [
            "src/"
        ]
    },
    "autoload-dev": {
        "classmap": [
            "test/src"
        ]
    },
    "type": "opus-package",
    "extra": {
        "opus": {
            "hiraeth/app": {
                "config": ""
            }
        }
    },
    "config": {
        "allow-plugins": {
            "imarc/opus": true
        }
    }
}
